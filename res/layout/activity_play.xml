<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusableInTouchMode="false"
    android:background="#fff99a"
    >

    <Button
        android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/button2"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/button2"
        android:longClickable="false" />

    <Button
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/button3"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/button3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button6"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button6"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button6"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginTop="18dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button7"
        android:layout_alignTop="@+id/button9"
        android:layout_alignLeft="@+id/button1" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button8"
        android:layout_alignTop="@+id/button9"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button9"
        android:layout_below="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_marginTop="18dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button10"
        android:layout_alignTop="@+id/button12"
        android:layout_alignLeft="@+id/button1" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button11"
        android:layout_alignTop="@+id/button12"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button8" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button12"
        android:layout_below="@+id/button9"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:layout_marginTop="18dp" />

    <ImageView
        android:background="#000000"
        android:layout_width="5dp"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button1"
        android:layout_marginRight="20dp" />

    <ImageView
        android:id="@+id/rope1"
        android:layout_width="400dp"
        android:layout_height="5dp"
        android:layout_above="@+id/rope2"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="@dimen/rope_mb"
        android:layout_toLeftOf="@+id/imageView"
        android:background="#bb8829"
        android:focusable="false"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="4dp"
        android:background="#bb8829"
        android:id="@+id/rope2"
        android:focusable="false"
        android:layout_alignRight="@+id/rope1"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentStart="false"
        android:layout_above="@+id/rope3"
        android:layout_marginBottom="@dimen/rope_mb"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="3dp"
        android:background="#bb8829"
        android:id="@+id/rope3"
        android:focusable="false"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="2dp"
        android:background="#000000"
        android:id="@+id/rope4"
        android:focusable="false"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_below="@+id/rope3"
        android:layout_marginTop="@dimen/rope_mb"
        android:layout_alignParentEnd="false"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:background="#000000"
        android:id="@+id/rpoe5"
        android:layout_toLeftOf="@+id/imageView"
        android:focusable="false"
        android:layout_alignParentStart="false"
        android:longClickable="false"
        android:layout_marginTop="@dimen/rope_mb"
        android:layout_below="@+id/rope4"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <Button
        android:id="@+id/changecode"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="86dp"
        android:text="change code" />

    <Button
        android:id="@+id/showcode"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:text="set code" />

</RelativeLayout>