<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCFF66"
    tools:context=".Main" >

    <Button
        android:id="@+id/makecodeb"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/fullscreen_content"
        android:background="@drawable/yellow"
        android:gravity="center"
        android:padding="30dp"
        android:text="Button" />

    <Button
        android:id="@+id/playb"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_above="@+id/makecodeb"
        android:layout_alignLeft="@+id/makecodeb"
        android:layout_marginBottom="20dp"
        android:background="@drawable/green"
        android:gravity="center"
        android:padding="30dp"
        android:text="Button" />

    <Button
        android:id="@+id/settingb"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/makecodeb"
        android:layout_below="@+id/makecodeb"
        android:layout_marginTop="20dp"
        android:background="@drawable/bluesky"
        android:gravity="center"
        android:padding="30dp"
        android:text="Button" />

    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/playb"
        android:gravity="top|center"
        android:keepScreenOn="true"
        android:padding="50dp"
        android:text="@string/app_name"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />

</RelativeLayout>
